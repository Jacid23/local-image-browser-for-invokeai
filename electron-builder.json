{
  "appId": "com.luqp2.image-metahub",
  "productName": "Image MetaHub",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron.mjs",
    "preload.js"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "ImageMetaHub-Setup-${version}.exe"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64"]
      }
    ],
    "category": "public.app-category.productivity",
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "identity": null
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "category": "Utility",
    "synopsis": "Local image browser for InvokeAI outputs"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "publish": {
    "provider": "github",
    "owner": "LuqP2",
    "repo": "image-metahub",
    "releaseType": "release"
  },
  "generateUpdatesFilesForAllChannels": true
}